<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 矩形的圆角弧度 -->
    <corners android:radius="10dp" />
    <!-- 矩形的填充色 -->
    <solid android:color="#ffffff" />

    <!-- 矩形的边框的宽度,每段虚线的长度，和两段虚线之间的颜色和颜色 -->
    <stroke
        android:width="2dp"
        android:color="#cfcfed" />
    <gradient
        android:angle="0"
        android:centerX="0"
        android:centerY="0"
        android:startColor="#9430eff9"
        android:endColor="#6f6ffa"
        android:type="linear"
    />
</shape>