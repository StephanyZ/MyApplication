<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mac.myapplication.AddInfo"
    android:orientation="vertical">
   <TextView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:background="@drawable/headline"
       android:layout_weight="1"
       android:text="预存储"
       android:gravity="center"
       android:textSize="20dp"
       >
   </TextView>
   <Spinner
       android:id="@+id/photo"
       android:layout_weight="1"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:entries="@array/photoitem"
       android:layout_marginTop="@dimen/height_4_80"
       >
   </Spinner>
   <Button
       android:id="@+id/spinnerbtn"
       android:layout_weight="0"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:text="开始扫描"
       android:layout_margin="@dimen/height_4_80"
       android:background="@drawable/btn_selector"/>

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_weight="15"
       android:orientation="vertical"
       android:layout_margin="@dimen/height_4_80">
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content">
         <TextView
             android:id="@+id/valnumber"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:textSize="@dimen/height_15_80"
             android:layout_weight="1"/>
         <TextView
             android:id="@+id/addvalnumber"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:textSize="@dimen/height_15_80"
             android:layout_weight="1"/>
      </LinearLayout>
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content">
         <ScrollView
             android:scrollbars="vertical"
             android:fadingEdge="vertical"
             android:layout_height="match_parent"
             android:layout_width="wrap_content"
             >
            <TableLayout
                android:id="@+id/valinfoshow"
                android:layout_weight="10"
                android:layout_marginTop="@dimen/height_4_80"
                android:layout_marginLeft="@dimen/height_4_80"
                android:layout_height="wrap_content"
                android:layout_width="match_parent">
            </TableLayout>
         </ScrollView>
      </LinearLayout>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          >
         <TextView
             android:id="@+id/storagenumber"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:textSize="@dimen/height_15_80"
             android:layout_weight="1"/>
         <TextView
             android:id="@+id/addstoragevalnumber"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:textSize="@dimen/height_15_80"
             android:layout_weight="1"/>
      </LinearLayout>
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          >
         <TextView
             android:id="@+id/exlocationnum"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:textSize="@dimen/height_15_80"
             android:layout_weight="1"/>
         <TextView
             android:id="@+id/addexlocationnum"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:textSize="@dimen/height_15_80"
             android:layout_weight="1"/>
      </LinearLayout>
   </LinearLayout>

   <Button
       android:id="@+id/startsavebtn"
       android:layout_weight="0"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:text="开始预存"
       android:layout_margin="@dimen/height_4_80"
       android:background="@drawable/btn_selector"/>
</LinearLayout>

